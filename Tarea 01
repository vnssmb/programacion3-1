package Application;
import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Label;
import javafx.scene.control.ListView;
import javafx.scene.control.TextField;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.layout.AnchorPane;
import javafx.stage.Stage;

public class Main extends Application {

    @Override
    public void start(Stage primaryStage) {
        AnchorPane anchorPane = new AnchorPane();

        ImageView[] imageViews = new ImageView[6];
        String imagePath = "file:./Downloads/cliente.png";
        for (int i = 0; i < imageViews.length; i++) {
            imageViews[i] = new ImageView(new Image(imagePath));
            imageViews[i].setFitHeight(44);
            imageViews[i].setFitWidth(60);
            imageViews[i].setPreserveRatio(true);
            imageViews[i].setLayoutX(58);
            imageViews[i].setLayoutY(24 + (i * 50));
            anchorPane.getChildren().add(imageViews[i]);
        }

        String[] names = {"Richard Webber", "Lexie Grey", "Arizona Robbins",
                "Calliope Torres", "Meredith Grey", "Alex Karev"};
        for (int i = 0; i < names.length; i++) {
            Label label = new Label(names[i]);
            label.setLayoutX(110);
            label.setLayoutY(37 + (i * 50));
            anchorPane.getChildren().add(label);
        }

        ListView<String> listView = new ListView<>();
        listView.setLayoutX(242);
        listView.setLayoutY(31);
        listView.setPrefSize(263, 257);
        listView.setStyle("-fx-background-color: #000000;");
        anchorPane.getChildren().add(listView);

        TextField textField = new TextField();
        textField.setLayoutX(242);
        textField.setLayoutY(307);
        textField.setPrefSize(263, 26);
        textField.setStyle("-fx-background-color: #0000FF;");
        anchorPane.getChildren().add(textField);

        Scene scene = new Scene(anchorPane, 556, 397);

        primaryStage.setScene(scene);
        primaryStage.setTitle("Muestra");
        primaryStage.show();
    }

    public static void main(String[] args) {
        launch(args);
    }
}
